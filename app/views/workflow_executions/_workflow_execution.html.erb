<tr>
  <th><%= link_to "ID: #{workflow_execution.id}", workflow_execution_path(workflow_execution), class: "link" %></th>
  <td><%= link_to workflow_execution.workflow.name, workflow_path(workflow_execution.workflow), class: "link" %></td>
  <td><%= link_to workflow_execution.data_source.name, data_source_path(workflow_execution.data_source), class: "link" %></td>
  <td class="opacity-60"><%= workflow_execution.rows.count %></td>
  <td class="opacity-60"><%= workflow_execution.workflow.connection&.name %></td>
  <td class="opacity-60"><%= workflow_execution.started_at&.iso8601 %></td>
  <td class="opacity-60"><%= workflow_execution.completed_at&.iso8601 %></td>
  <td><span class="badge badge-sm uppercase font-bold badge-<%= execution_status_color(workflow_execution.status) %>"><%= workflow_execution.status %></span></td>
</tr>
