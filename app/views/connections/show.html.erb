<div class="p-4 max-w-2xl">
  <%= link_to "â† Back to Connections", connections_path, class: "link-primary text-sm" %>
  <h1 class="mt-2"><%= @connection.name %></h1>
  <div class="text-sm opacity-70 mt-1">
    <span class="badge badge-ghost badge-sm"><%= @connection.handle %></span>
  </div>

  <div class="mt-6 space-y-4">
    <div>
      <label class="label"><span class="label-text font-semibold">Base URL</span></label>
      <p><%= @connection.base_url || "-" %></p>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="label"><span class="label-text font-semibold">Subdomain</span></label>
        <p><%= @connection.subdomain || "-" %></p>
      </div>
      <div>
        <label class="label"><span class="label-text font-semibold">Domain</span></label>
        <p><%= @connection.domain || "-" %></p>
      </div>
    </div>
    <div>
      <label class="label"><span class="label-text font-semibold">Credentials</span></label>
      <p class="text-sm opacity-70">(encrypted, not shown)</p>
    </div>
  </div>

  <div class="flex gap-2 mt-6">
    <%= link_to "Edit", edit_connection_path(@connection), class: "btn btn-primary btn-sm" %>
    <%= button_to "Delete", connection_path(@connection), method: :delete,
                  class: "btn btn-ghost btn-sm text-error",
                  data: { turbo_confirm: "Are you sure you want to delete this connection?" } %>
  </div>
</div>
