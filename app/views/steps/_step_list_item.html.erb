<li class="card bg-base-100 shadow-sm">
  <div class="card-body p-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <span class="badge badge-ghost badge-sm"><%= index + 1 %></span>
        <%= link_to step.name, workflow_step_path(workflow, step), class: "font-medium hover:text-primary" %>
        <% if step.step_config&.dig('required') %>
          <span class="badge badge-warning badge-xs">required</span>
        <% end %>
      </div>
      <div class="flex items-center gap-1">
        <!-- Reorder buttons -->
        <% unless index == 0 %>
          <%= button_to move_up_workflow_step_path(workflow, step), method: :patch, class: "btn btn-ghost btn-xs", title: "Move up" do %>
            ↑
          <% end %>
        <% end %>
        <% unless index == workflow.steps.size - 1 %>
          <%= button_to move_down_workflow_step_path(workflow, step), method: :patch, class: "btn btn-ghost btn-xs", title: "Move down" do %>
            ↓
          <% end %>
        <% end %>
        <!-- Delete button -->
        <%= button_to workflow_step_path(workflow, step), method: :delete, 
                    class: "btn btn-ghost btn-xs text-error",
                    data: { turbo_confirm: "Delete step '#{step.name}'?" },
                    title: "Delete step" do %>
          ✕
        <% end %>
      </div>
    </div>
    <% if step.step_config %>
      <div class="text-xs opacity-70 mt-1">
        <span class="uppercase"><%= step.step_config['method'] || 'GET' %></span>
        <span class="ml-1 truncate"><%= step.step_config['url']&.truncate(40) %></span>
      </div>
    <% end %>
  </div>
</li>
